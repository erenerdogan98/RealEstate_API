@model List<ResultLastFiveProductsDto>

@{
    int count = 0;
}
<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Last 5 Adverts</h6>
            <a href="/Product/Index">Show All</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-dark">
                        <th scope="col"><#></th>
                        <th scope="col">Date</th>
                        <th scope="col">Title</th>
                        <th scope="col">City - District</th>
                        <th scope="col">Category</th>
                        <th scope="col">Price</th>
                        <th scope="col">See Advert</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@(((DateTime)item.AdvertisementDate).ToString("dd-MMM-yyyy"))</td>
                            <td>@item.Title</td>
                            <td>@item.City @item.District</td>
                            <td>@item.Name</td>
                            <td>$@item.Price</td>
                            <td><a class="btn btn-sm btn-primary" href="">See Advert Details</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>