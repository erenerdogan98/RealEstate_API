@model CreateProductDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h1>Adding New Advert Page</h1>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Adding New Advert</h6>
                <form method="post">
                    <label>Advert Title</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>City</label>
                    <input type="text" asp-for="City" class="form-control" />
                    <br />
                    <label>District</label>
                    <input type="text" asp-for="District" class="form-control" />
                    <br />
                    <label>Category</label>
                    @Html.DropDownListFor(x => x.CategoryName, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                    <br />
                    <label>Price</label>
                    <input type="text" asp-for="Price" class="form-control" />
                    <br />
                    <label>Type</label>
                    <input type="text" asp-for="Type" class="form-control" />
                    <br />
                    <label>Cover Image</label>
                    <input type="text" asp-for="CoverImage  " class="form-control" />
                    <br />
                    <label>Advert Address</label>
                    <textarea asp-for="Address" class="form-control" rows="5"></textarea>
                    <br />
                    <button class="btn btn-primary">Add Product</button>
                </form>
            </div>
        </div>
    </div>
</div>