@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Product List</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Advert title</th>
                                <th scope="col">City</th>
                                <th scope="col">Distict</th>
                                <th scope="col">Category</th>
                                <th scope="col">Type</th>
                                <th scope="col">Price</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Update</th>
                                <th scope="col">See on site</th>
                                <th scope="col">Deal of the Day</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Title</td>
                                    <td>@item.City</td>
                                    <td>@item.District</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.Type</td>
                                    <td>@item.Price</td>
                                    <td><a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a></td>
                                    <td><a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.Id" class="btn btn-outline-success">Update</a></td>
                                    <td><a asp-controller="Product" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-outline-success">See on site</a></td>
@*                                     <td>
                                        @if (item.DealOfTheDay == true)
                                        {
                                            <a asp-controller="Product" asp-action="ProductChangeDealOfTheDayStatus" asp-route-id="@item.Id" class="btn btn-outline-secondary">Make Passive</a>
                                        }
                                        @if (item.DealOfTheDay == false)
                                        {
                                            <a asp-controller="Product" asp-action="ProductChangeDealOfTheDayStatus" asp-route-id="@item.Id" class="btn btn-outline-warning">Make Active</a>
                                        }
                                    </td> *@
                                    <td>
                                        <a asp-controller="Product" asp-action="ProductChangeDealOfTheDayStatus" asp-route-id="@item.Id" class="btn @(item.DealOfTheDay ? "btn-outline-secondary" : "btn-outline-warning")">
                                            @(item.DealOfTheDay ? "Make Passive" : "Make Active")
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-controller="Product" asp-action="CreateProduct" class="btn btn-outline-primary">Add New Advert</a>
                </div>
            </div>
        </div>
    </div>
</div>