@model UpdateEmployeeDto
@{
    ViewData["Title"] = "UpdateEmployee";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h1>Updating New Employee Page</h1>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Update Employee</h6>
                <form method="post">
                    <input type="hidden" asp-for="Id"/>
                    <label>Employee Name</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <br />
                    <label>Employee Title</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Employee Email</label>
                    <input type="email" asp-for="Email" class="form-control" />
                    <br />
                    <label>Employee Phone</label>
                    <input type="tel" asp-for="PhoneNumber" class="form-control" />
                    <br />
                    <label>Employee Photo</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Update Employee</button>
                </form>
            </div>
        </div>
    </div>
</div>